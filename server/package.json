{
  "name": "server",
  "version": "1.0.0",
  "author": "nicejade",
  "scripts": {
    "start": "nodemon src/index.js",
    "dev": "npm start",
    "production": "node bin/production.js",
    "debug": "npm run clean && node bin/debug",
    "build": "npm test && npm run clean && npm run compile",
    "compile": "babel src/ --out-dir app/ --retain-lines --source-maps",
    "clean": "rm -rf app/",
    "test": "mocha -u bdd --compilers js:babel-core/register",
    "commit": "git add . && git commit -m 'update static ðŸ˜Š' && git push",
    "server": "npm i && npm run clean && npm run compile && npm run production",
    "deploy": "git pull && npm run clean && npm run compile && cross-env NODE_ENV=production pm2 start app/index.js --name 'nicelinks'",
    "redeploy": "git pull && npm run clean && npm run compile && cross-env NODE_ENV=production pm2 restart app/index.js --name 'nicelinks'"
  },
  "engines": {
    "node": ">= 4"
  },
