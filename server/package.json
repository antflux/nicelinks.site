{
  "name": "server",
  "version": "1.0.0",
  "description": "为承载「倾城之链」数据，基于 Node.js（koa2、MongoDB、Redis 等所构建的后台服务",
  "author": "nicejade",
  "scripts": {
    "start": "nodemon src/index.js",
    "dev": "npm start",
    "production": "node bin/production.js",
    "debug": "npm run clean && node bin/debug",
    "build": "npm test && npm run clean && npm run compile",
    "compile": "babel src/ --out-dir app/ --retain-lines --source-maps",
    "clean": "rm -rf app/",
    "test": "mocha -u bdd --compilers js:babel-core/register",
    "commit": "git add . && git commit -m 'update static 😊' && git push",
    "server": "npm i && npm run clean && npm run compile && npm run production",
    "deploy": "git pull && npm run clean && npm run compile && cross-env NODE_ENV=production pm2 start app/index.js --name 'nicelinks'",
    "redeploy": "git pull && npm run clean && npm run compile && cross-env NODE_ENV=production pm2 restart app/index.js --name 'nicelinks'"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "babel-cli": "^6.7.7",
    "babel-core": "^6.26.3",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-transform-runtime": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-loose": "^8.0.0",
    "babel-preset-stage-3": "^6.5.0",
    "babel-runtime": "^6.6.1",
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.7.1",
    "cheerio": "^1.0.0-rc.3",
    "cross-env": "^6.0.3",
    "crypto": "1.0.1",
    "debug": "^4.1.1",
    "ejs": "^2.7.1",
    "formidable": "^1.1.1",
    "fs-extra": "^8.1.0",
    "jsonwebtoken": "^8.5.1",
    "kcors": "^2.2.2",
    "koa": "^2.10.0",
    "koa-bodyparser": "^4.2.1",
    "koa-convert": "^1.2.0",
    "koa-helmet": "^5.2.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-onerror": "^4.1.0",
    "koa-passport": "^4.1.3",
    "koa-redis": "^4.0.0",
    "koa-router": "^7.0.0",
    "koa-session": "^5.12.3",
    "koa-session2": "^2.2.10",
    "koa-static": "^5.0.0",
    "koa-views": "^6.2.1",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.15",
    "mongo-sanitize": "^1.0.1",
    "mongoose": "^5.7.5",
    "node-schedule": "^1.3.2",
    "nodemailer": "^6.3.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "redis": "^2.8.0",
    "sha1": "^1.1.1",
    "winston": "^3.2.1",
    "zlib": "^1.0.5"
  },
  "devDependencies": {
    "chokidar": "^3.2.2",
    "colors": "^1.4.0",
    "mocha": "^6.2.1",
    "should": "^13.2.3",
    "supertest": "^4.0.2"
  },
  "engines": {
    "node": ">= 8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicejade/nicelinks.site"
  },
